@{
    ViewData["Title"] = "Hizmet Yönetimi";
}
<h2>Hizmetler</h2>
<a href="/Hizmet/Create" class="btn btn-primary mb-3">Yeni Hizmet Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Hizmet Adı</th>
            <th scope="col">Salon</th>
            <th scope="col">Süre (Dakika)</th>
            <th scope="col">Ücret (₺)</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hizmet in Model)
        {
            <tr>
                <td>@hizmet.Adı</td>
                <td>@hizmet.Salon.Adı</td>
                <td>@hizmet.Süre</td>
                <td>@hizmet.Ücret</td>
                <td>
                    <a href="/Hizmet/Edit/@hizmet.HizmetID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Hizmet/Delete/@hizmet.HizmetID" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
