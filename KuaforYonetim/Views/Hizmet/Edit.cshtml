@model KuaforYonetim.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="SalonID">Salon</label>
        <select class="form-control" asp-for="SalonID">
            <option value="">Bir salon seçin</option>
            @foreach (var salon in ViewData["Salonlar"] as List<Salon>)
            {
                <option value="@salon.SalonID" selected="@(salon.SalonID == Model.SalonID ? "selected" : null)">
                    @salon.Adı
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Adı">Hizmet Adı</label>
        <input type="text" class="form-control" asp-for="Adı" />
    </div>

    <div class="form-group">
        <label for="Süre">Süre (Dakika)</label>
        <input type="number" class="form-control" asp-for="Süre" />
    </div>

    <div class="form-group">
        <label for="Ücret">Ücret</label>
        <input type="number" class="form-control" asp-for="Ücret" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
