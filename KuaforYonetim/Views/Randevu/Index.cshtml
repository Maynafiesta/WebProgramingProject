@{
    ViewData["Title"] = "Randevu Planlayıcı";
}
<h2>Randevu Planlayıcı</h2>
<form method="post" action="/Randevu/Ekle">
    <div class="mb-3">
        <label for="MüşteriAdı" class="form-label">Müşteri Adı</label>
        <input type="text" class="form-control" id="MüşteriAdı" name="MüşteriAdı" required>
    </div>
    <div class="mb-3">
        <label for="MüşteriTelefon" class="form-label">Telefon</label>
        <input type="tel" class="form-control" id="MüşteriTelefon" name="MüşteriTelefon" required>
    </div>
    <div class="mb-3">
        <label for="Hizmet" class="form-label">Hizmet</label>
        <select class="form-select" id="Hizmet" name="HizmetID">
            <option value="1">Saç Kesimi</option>
            <option value="2">Boyama</option>
            <!-- Dinamik liste için backend'e bağlayacağız -->
        </select>
    </div>
    <div class="mb-3">
        <label for="TarihSaat" class="form-label">Tarih ve Saat</label>
        <input type="datetime-local" class="form-control" id="TarihSaat" name="TarihSaat" required>
    </div>
    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
