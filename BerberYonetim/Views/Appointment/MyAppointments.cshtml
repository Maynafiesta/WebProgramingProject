@model List<WebApplication1.Models.Appointment>

<h2>Randevularım</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Salon</th>
        <th>Çalışan</th>
        <th>Randevu Zamanı</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var appointment in Model)
    {
        <tr>
            <td>@appointment.Store.Name</td>
            <td>@appointment.Employee.Name</td>
            <td>
                @appointment.AppointmentTime.ToString("g")
                -
                @appointment.AppointmentTime.AddHours(1).ToString("g")
            </td>
        </tr>
    }
    </tbody>
</table>
