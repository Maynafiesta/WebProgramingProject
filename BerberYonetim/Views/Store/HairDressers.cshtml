@model List<WebApplication1.Models.Store>

<h2>Kuaförler</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Salon Adı</th>
        <th>Çalışanlar</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var hairDresser in Model)
    {
        <tr>
            <td>@hairDresser.Name</td>
            <td class="d-flex justify-content-end">
                <!-- Modal açacak buton -->
                <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#employeesModal-@hairDresser.Id">
                    Çalışanları Gör
                </button>
            </td>
        </tr>

        <!-- Modal -->
        <div class="modal fade" id="employeesModal-@hairDresser.Id" tabindex="-1"
             aria-labelledby="employeesModalLabel-@hairDresser.Id" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="employeesModalLabel-@hairDresser.Id">@hairDresser.Name -
                            Çalışanlar</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (hairDresser.Employees != null && hairDresser.Employees.Any())
                        {
                            <ul class="list-group">
                                @foreach (var employee in hairDresser.Employees)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @employee.Name
                                        <form asp-controller="Store" asp-action="RemoveEmployee" method="post"
                                              class="d-inline">
                                            <input type="hidden" name="employeeId" value="@employee.Id"/>
                                            <button type="submit" class="btn btn-danger btn-sm">İşten Çıkar</button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>Bu mağazaya ait çalışan bulunmamaktadır.</p>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
    }
    </tbody>
</table>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
