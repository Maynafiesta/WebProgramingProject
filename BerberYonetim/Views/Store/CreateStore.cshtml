@model WebApplication1.Models.CreateStoreViewModel

<h2>Yeni Store Ekle</h2>

<form asp-action="CreateStore" method="post">
    <div class="form-group">
        <label>Salon Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Salon Türü</label>
        <select asp-for="Type" class="form-control">
            <option value="Barber">Berber</option>
            <option value="HairDresser">Kuaför</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Çalışan Seç</label>
        <select asp-for="SelectedEmployeeIds" class="form-control" multiple="multiple">
            @foreach (var employee in Model.AvailableEmployees)
            {
                <option value="@employee.Id">@employee.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
