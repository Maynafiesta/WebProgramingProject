@model List<WebApplication1.Models.Store>

<h2>Berberler</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Salon Adı</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var barber in Model)
    {
        <tr>
            <td>@barber.Name</td>
            <td class="d-flex justify-content-end">
                <!-- Çalışan Ekle Butonu -->
                <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#addEmployeeModal-@barber.Id">
                    Çalışan Ekle
                </button>

                <!-- Çalışanları Gör Butonu -->
                <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#employeesModal-@barber.Id">
                    Çalışanları Gör
                </button>
            </td>
        </tr>

        <!-- Çalışanları Gör Modal -->
        <div class="modal fade" id="employeesModal-@barber.Id" tabindex="-1" aria-labelledby="employeesModalLabel-@barber.Id" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="employeesModalLabel-@barber.Id">@barber.Name - Çalışanlar</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (barber.Employees != null && barber.Employees.Any())
                        {
                            <ul class="list-group">
                                @foreach (var employee in barber.Employees)
                                {
                                    <li class="list-group-item">
                                        @employee.Name
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>Bu mağazaya ait çalışan bulunmamaktadır.</p>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Çalışan Ekle Modal -->
        <div class="modal fade" id="addEmployeeModal-@barber.Id" tabindex="-1" aria-labelledby="addEmployeeModalLabel-@barber.Id" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addEmployeeModalLabel-@barber.Id">@barber.Name - Çalışan Ekle</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (ViewBag.AvailableEmployees != null && ((List<WebApplication1.Models.Employee>)ViewBag.AvailableEmployees).Any())
                        {
                            <form asp-controller="Store" asp-action="AddEmployeeToStore" method="post">
                                <input type="hidden" name="storeId" value="@barber.Id" />
                                <div class="form-group">
                                    <label>Çalışan Seç</label>
                                    <select name="employeeId" class="form-control">
                                        @foreach (var employee in (List<WebApplication1.Models.Employee>)ViewBag.AvailableEmployees)
                                        {
                                            <option value="@employee.Id">@employee.Name</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-success mt-3">Ekle</button>
                            </form>
                        }
                        else
                        {
                            <p>İşe hazır çalışan bulunmamaktadır.</p>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
    }
    </tbody>
</table>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
